@page
@model RazorPageProject.Pages.TodoList.ViewModel


<h1 class=" text-center text-info">View and Update Task</h1>
<br />

<div class="border container" style="padding:30px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <input hidden asp-for="ToDo.Id" />
        <div class=" = form-group row">
            <div class="col-3">
                <label asp-for="ToDo.Task"></label>
            </div>
            <div class="col-6">
                <input asp-for="ToDo.Task" class="form-control" />
            </div>
            <span asp-validation-for="ToDo.Task" class="text-danger"></span>
        </div>

        <div class=" = form-group row">
            <div class="col-3">
                <label asp-for="ToDo.Status"></label>
            </div>
            <div class="col-6">
                <input asp-for="ToDo.Status" class="form-control" />
            </div>
            <span asp-validation-for="ToDo.Status" class="text-danger"></span>

        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="ToDo.Priority"></label>
            </div>
            <div class="col-6">
                <input asp-for="ToDo.Priority" class="form-control" />
            </div>
            <span asp-validation-for="ToDo.Priority" class="text-danger"></span>

        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="ToDo.date"></label>
            </div>
            <div class="col-6">
                <input asp-for="ToDo.date" class="form-control" />
            </div>
            <span asp-validation-for="ToDo.date" class="text-danger"></span>

        </div>

        <div class="form-group row ">
            <div class=" col-3  offset-3">
                <button class="btn btn-success form-control">Update Item</button>
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-info form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
